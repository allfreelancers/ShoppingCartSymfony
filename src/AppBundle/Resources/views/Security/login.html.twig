{% extends '::base.html.twig' %}

{% block body %}
    {{ parent() }}
    {% if error %}
        <div class="container">
            <div class="alert alert-dismissible alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </div>
    {% endif %}

    <div class="container">
        <div class="wrapper">
            <form class="{{ path('user_login') }}" method="post">
                <h2 class="form-signin-heading">Please login</h2>
                <div class="form-group">
                    <input type="text" class="form-control" id="username" name="_username" placeholder="Username or Email" value="{{ last_username }}"/>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Password" />
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
            </form>
        </div>
    </div>
{% endblock %}





