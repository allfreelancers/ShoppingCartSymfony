{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h3>Set Permissions</h3>
                <hr>
                <form action="{{ path('add_permissions', {'id': id, 'page':page}) }}" method="post">
                    <div class="form-group">
                        <label for="role-editor">Editor Role: </label>
                        <input type="checkbox" class="form-control" id="role-editor" name="editor" {{ isEditor ? 'checked' : '' }}>
                    </div>
                    <div class="form-group">
                        <label for="role-admin">Admin Role: </label>
                         <input type="checkbox" class="form-control" id="role-admin" name="admin" {{ isAdmin ? 'checked' : '' }}>
                    </div>
                    <button class="btn btn-default" type="submit">Set Roles</button>
                </form>

            </div>
        </div>
    </div>
{% endblock %}


