{% extends "base.html.twig" %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            {% for index, product in products %}
                <div class="col-md-4 col-sm-6">

                {% include '@App/partials/items.html.twig' with {item: product} %}

                {% if (index + 1) % 3 == 0 %}
                    </div>
                    <div class="row">
                {% endif%}

                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}